{
  "name": "book-review-platform-backend",
  "version": "1.0.0",
  "description": "Backend API for the Book Review Platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --runInBand --coverage",
    "test:integration:run": "jest tests/integration --runInBand",
    "test:all": "jest --coverage --runInBand",
    "test:smoke": "jest tests/smoke.test.ts --runInBand --verbose",
    "test:load": "jest tests/load --runInBand --verbose",
    "test:performance": "jest tests/performance --runInBand --verbose",
    "test:validation": "jest tests/validation --runInBand --verbose",
    "test:e2e": "ts-node tests/e2e/e2e-test-runner.ts",
    "test:comprehensive": "npm run test:unit && npm run test:integration && npm run test:load && npm run test:performance && npm run test:validation",
    "monitoring:start": "ts-node src/monitoring/dashboard.ts",
    "monitoring:health": "ts-node -e \"import('./src/monitoring/health-monitor').then(m => m.healthMonitor.checkHealth().then(console.log))\"",
    "monitoring:metrics": "ts-node -e \"import('./src/monitoring/metrics-collector').then(m => m.metricsCollector.collectMetrics().then(console.log))\"",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src/**/*.ts",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "book",
    "review",
    "platform",
    "api",
    "typescript",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@types/axios": "^0.9.36",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "openai": "^5.19.1",
    "pg": "^8.16.3",
    "prisma": "^6.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
