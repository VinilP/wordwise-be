# Production Environment Configuration

# Environment
environment = "prod"
project_name = "book-review-platform"

# AWS Configuration
aws_region = "us-east-1"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# VPC Configuration
vpc_cidr = "10.2.0.0/16"
public_subnet_cidrs = ["10.2.1.0/24", "10.2.2.0/24", "10.2.3.0/24"]
private_subnet_cidrs = ["10.2.4.0/24", "10.2.5.0/24", "10.2.6.0/24"]

# ECS Configuration
ecs_task_cpu = 1024
ecs_task_memory = 2048
ecs_desired_count = 3
ecs_min_capacity = 2
ecs_max_capacity = 10

# RDS Configuration
db_instance_class = "db.t3.medium"
db_allocated_storage = 100
db_max_allocated_storage = 500
db_backup_retention_period = 30
db_backup_window = "03:00-04:00"
db_maintenance_window = "sun:04:00-sun:05:00"
db_deletion_protection = true
db_skip_final_snapshot = false

# Application Configuration
app_port = 3000
health_check_path = "/health"
health_check_interval = 30
health_check_timeout = 5
health_check_healthy_threshold = 2
health_check_unhealthy_threshold = 2

# Auto Scaling Configuration
cpu_target_value = 50.0
memory_target_value = 60.0
scale_up_cooldown = 300
scale_down_cooldown = 600

# CloudWatch Configuration
log_retention_days = 90

# SSL Certificate (optional - set if using custom domain)
# domain_name = "api.yourdomain.com"
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Tags
tags = {
  Environment = "production"
  Project     = "book-review-platform"
  ManagedBy   = "terraform"
  Owner       = "platform-team"
  CostCenter  = "engineering"
}